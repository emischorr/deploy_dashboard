<div class="dashboard">

  <div class="services grid">
    <%= for service <- @services do %>
      <%= live_render(@conn, DeployDashboardWeb.ServiceLive, session: %{service_name: service.name, selected_service: @selected_service}) %>
    <% end %>
  </div>

  <%= if @selected_service, do: render("detail_pane.html", selected_service: @selected_service) %>

</div>
